{
    "version": "2.0.2",
    "compilerOptions": {
        "lib": ["es5", "es2015.promise", "dom", "es2015"],
        "target": "es5",
        "typeRoots": [
          "node_modules/@types"
        ],
        "baseUrl":".",
        "paths": {
            "@core/*": ["src/core/*"],
            "@github/*":["src/github/*"],
            "https://esm.sh/@octokit/core":["./node_modules/@octokit/core"]
        },
        "outDir": "dist_browser",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true
    }
}